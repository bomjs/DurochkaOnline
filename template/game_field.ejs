<% layout('layout/page') -%>
<% block('title', "Игровое поле") -%>
<script src="/vendor/bower_components/jquery/dist/jquery.js"></script>
<script>
    window.onload=function(){
        var player_cards=document.getElementById('player_cards');
        var player_cards_1=document.getElementById('player_cards_1');
        var cards=[52]
        for (var i=0;i<4;i++){
            for(var j=0;j<13;j++){
                cards[j+(i*13)] = document.createElement('div');
                cards[j+(i*13)].className='cards';
                cards[j+(i*13)].id='card'+(j+(i*13));
                cards[j+(i*13)].style.backgroundPosition = -46*j+"px "+i*(-60.5)+"px";
                }
        }
        var index=0;
        for (var i=0;i<6;i++){
            index=Math.floor(Math.random( ) * (51));
            player_cards.appendChild(cards[index]);
            player_cards_1.appendChild(cards[i]);
        }
    }

</script>
<script src="/vendor/bower_components/socket.io-client/dist/socket.io.js"></script>
<!--<script src="Game_engine/sprite.js"></script>-->
<!--<script src="/Game_engine/game_engine.js"></script>-->
<div id="body">
    <div id="field">
        <div id="game_table">
            <div id="player_cards">

            </div>
            <div id="player_cards_1">

            </div>

        </div>
    </div>
    <div class="chat">
        <h2>Чат</h2>
        <div id="room">
            <ul class="media-list"></ul>
            <form>
               <input disabled class="form-horizontal" autocomplete="off" autofocus placeholder="Сообщение...">
            </form>
        </div>
    </div>

</div>

<script>
    var input = $('#room input');
    var ul = $('#room ul');
    var form = $('#room form');

    var socket = io.connect('', {
        reconnect: false
    });

      socket
            .on('message', function(username, message) {
                    printMessage(username + "> " + message);
            })
            .on('leave', function(username) {
                printStatus(username + " вышел из чата");
            })
            .on('join', function(username) {
                printStatus(username + " вошёл в чат");
            })
            .on('connect', function() {
                printStatus("соединение установлено");
                form.on('submit', sendMessage);
                input.prop('disabled', false);
            })
            .on('disconnect', function() {
                printStatus("соединение потеряно");
                form.off('submit', sendMessage);
                input.prop('disabled', true);
                this.$emit('error');
            })
            .on('logout', function() {
                location.href = "/";
            })
            .on('error', function(reason) {
                if (reason == "handshake unauthorized") {
                    printStatus("вы вышли из сайта");
                } else {
                    setTimeout(function() {
                        socket.socket.connect();
                    }, 500);
                }
            });

    function sendMessage() {
        var text = input.val();
        socket.emit('message', text, function() {
            printMessage("я> " + text);
        });

        input.val('');
        return false;
    }

    function printStatus(status) {
        $('<li>').append($('<i>').text(status)).appendTo(ul);
    }

    function printMessage(text) {
        $('<li>').text(text).appendTo(ul);
    }

</script>